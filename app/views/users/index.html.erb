

<main>
 <p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">

<%= render 'users/info', user:@user %>


<h2 class="mt-3">New book</h2>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<div>
<%= f.submit 'Create Book', class:"btn btn-success" %>
<% end %>
</div>
   </div>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
        <% @users.each do |users| %>
      <tr>
        <td><%= image_tag users.get_profile_image, size:'100x81' %></td>
        <td><%= users.name %></td>
        <td><%= link_to "Show", user_path(users.id) %></td>
      </tr>
        <% end %>
    </tbody>
  </table>
   </div>
  
 </div>
</main>


